
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        }
      }
    },
    "Store": {
      "title": "Store",
      "description": "Represents a physical store location.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the store."
        }
      },
      "required": ["name"]
    },
    "Aisle": {
      "title": "Aisle",
      "description": "Represents an aisle within a store.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name or number of the aisle."
        },
        "storeId": {
          "type": "string",
          "description": "The ID of the store this aisle belongs to."
        }
      },
      "required": ["name", "storeId"]
    },
    "Product": {
      "title": "Product",
      "description": "Represents an inventory item.",
      "type": "object",
      "properties": {
        "address": {
          "type": "string",
          "description": "The specific location of the product within the aisle."
        },
        "barcode": {
          "type": "string",
          "description": "The product's barcode."
        },
        "quantity": {
          "type": "number",
          "description": "The number of units in stock."
        },
        "expirationDate": {
          "type": "string",
          "format": "date",
          "description": "The expiration date in YYYY-MM-DD format."
        },
        "storeId": {
          "type": "string",
          "description": "The ID of the store this product belongs to."
        },
        "aisleId": {
          "type": "string",
          "description": "The ID of the aisle this product belongs to."
        }
      },
      "required": ["address", "barcode", "quantity", "expirationDate", "storeId", "aisleId"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ],
    "customClaims": {
        "role": {
            "type": "string",
            "enum": ["Administrator", "Viewer"]
        }
    }
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores user profile information, accessible only by the user themselves unless the requester is an admin."
    },
    "/users/{userId}/stores/{storeId}": {
      "schema": { "$ref": "#/entities/Store" },
      "description": "Stores created by a specific user."
    },
    "/users/{userId}/stores/{storeId}/aisles/{aisleId}": {
      "schema": { "$ref": "#/entities/Aisle" },
      "description": "Aisles within a specific store belonging to a user."
    },
    "/users/{userId}/stores/{storeId}/aisles/{aisleId}/products/{productId}": {
      "schema": { "$ref": "#/entities/Product" },
      "description": "Products within a specific aisle, in a specific store, belonging to a user."
    }
  }
}
